@model Projekt.Models.InsurenceEvent

@{
	ViewData["Title"] = "Odstranit";
}

<h1>Odstranit</h1>

<h3>jste si jistý že chcete odstranit pojistnou událost?</h3>
<div>
	<h4>Pojistná událost</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.TimeOfEvent)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.TimeOfEvent)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.PlaceOfEvent)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.PlaceOfEvent)
		</dd>
		<dt class="col-sm-2">
			Pojištěnec
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Insurence.InsurenceHolder.FirstName)
			@Html.DisplayFor(model => model.Insurence.InsurenceHolder.LastName)
			:
			@Html.DisplayFor(model => model.Insurence.InsurenceHolder.Email)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		@if (ViewBag.insurenceRouteId != null)
		{
			<input type="hidden" name="insurenceRouteId" value="@ViewBag.insurenceRouteId">
		}
		<input type="submit" value="Odstranit" class="btn btn-danger" /> |
		<a asp-action="Index">Zpátky na seznam</a>
	</form>
</div>
