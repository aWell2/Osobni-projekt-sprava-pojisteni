@model Projekt.Models.InsurenceEvent

@{
	ViewData["Title"] = "Upravit";
}

<h1>Upravit</h1>

<h4>Pojistná událost</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<input type="hidden" asp-for="InsurenceId" />
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<textarea asp-for="Description" class="form-control"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="TimeOfEvent" class="control-label"></label>
				<input asp-for="TimeOfEvent" class="form-control" />
				<span asp-validation-for="TimeOfEvent" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PlaceOfEvent" class="control-label"></label>
				<input asp-for="PlaceOfEvent" class="form-control" />
				<span asp-validation-for="PlaceOfEvent" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Uložit" class="btn btn-primary" />
			</div>
			@if (ViewBag.insurenceRouteId != null)
			{
				<input type="hidden" name="insurenceRouteId" value="@ViewBag.insurenceRouteId">
			}
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Zpátky na seznam</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
